<!--pages/articleDetail/documentDetail/documentDetail.wxml-->
<view style='width:100%;'>
  <view class='head'>
    <image mode='widthFix' src='img/document.png'></image>
  </view>
  <view class='course-head row'>
    <view class='coursePrice column' style='width:100%'>
      <text style='color:black; font-size:1rem; font-weight:bold;'>{{document.title}}</text>
      <view wx-if="{{isShowPrice}}">
        <text style='color:orange; font-size:0.8rem'>¥{{document.price}}</text>
        <text style='margin: 0 10px; font-size:0.7rem'>银牌会员*{{discount298}}，金牌会员*{{discount998}}</text>
        <navigator class='jrq__button jrq__button--color-red updateButton' url='/pages/me/updateMe/updateMe'>身份升级</navigator>
      </view>
    </view>
    <view class='v-center h-center' style='width:100px; border:1px solid black; margin:5px; border-radius:5px'>
      <text style='color:black; font-size: 1rem; margin:3px'>文档</text>
    </view>
  </view>
  <view class='course-intro column'>
    <text style='color:black; font-size:1rem; font-weight:bold;'>文档介绍</text>
    <view class='div-line'></view>
    <view class='detail column' style='font-size:0.8rem;'>
      <text>文档作者：{{document.writerName}}</text>
      <text>文档发布日期：{{document.date}}</text>
      <text>文档点赞数：{{document.likeNum}}</text>
      <text>文档详情：{{document.detail}}</text>
    </view>
  </view>

  <block wx:for="{{document.attachments}}" wx:for-item="item" wx:for-index="index">
    
      <text>{{document.title}} 第{{index+1}}节</text>
      <view class='course-video'>
    <text style='color:black; font-size:1rem; font-weight:bold;'>文档预览</text>
    <view class='div-line'></view>
    <image class='document__preview' mode='widthFix' src='{{document.previews[index]}}' data-src='{{document.previews[index]}}' bindtap='previewImg'></image>
  </view>
  <view class='download' wx-if="{{isShowPrice}}" style='margin: 20px'>
    <!-- <view wx:if='{{!isDownLoadAttachment[index]}}'> -->
    <view>
      <button class='jrq__button' bindtap='onDownload' data-index='{{index}}'>下载并打开文档</button>
    </view>
    <!-- <view wx:else>
      <button class='jrq__button' bindtap='onOpen' data-index='{{index}}'>打开文档</button>
    </view> -->
  </view>
    
  </block>


  


</view>