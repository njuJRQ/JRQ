/* pages/business/business.wxss */
@import '/style/common.wxss';
@import '/template/findBar/searchBar.wxss';
@import '/template/adBar/adBar.wxss';
@import '/template/likeIcon/likeIcon.wxss';

/* 本页面的样式 */
page{
  background-color: #fff;

}
 .container {
  background-color: #fff;
} 

.box {
  width: 100%;
  height: 100%;
}

.header_img {
  width: 95%;
  margin: 0 auto;
  margin-top: 5px;
}

.img_a {
  width: 100%;
}
.conten_box{
   width: 98%;
  margin: 0 auto;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;

}
.conten {
   width: 98%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 5px;
}
.chunk {

  width: 49%;
  height: 16vh;
margin-bottom: 15px;
}

.chunk_img {
  height: 16vh;
}

.img_b {
  width: 100%;
  height: 100%;
}

.chunk_text {
  position: absolute;
  bottom: 45px;
  left: 50px;
}
.title{
  color: #fff;
  font-weight: 800;
  font-size: 1rem;
}

/* 顶部提示框 */
.topReminder{
  width: 100%;
  height: 50px;
  background: grey;
  opacity: 0.9;
  position: fixed;
  color: white;
  font-size: 30rpx;
  line-height: 50px;
  top: -50px;
  text-align: center;
  z-index: 10;
}
.show{
  top: -50px;
  animation: show 4s;
  animation-timing-function:ease;
}
.topReminder .nav {
  display: inline;
  text-decoration: underline;
  top: -1px;
}
.closeReminderPic{
  width:22px;
  height:22px;
  float:right;
  vertical-align: middle;
  margin-top:14px;
  margin-right:10px;
  margin-left:-22px;  /* 使文字正常居中 */
}
@keyframes show
{
  0% {top:-50px;}
  10% {top:0px;}
  80% {top:0px;}
  100% {top:-50px;}
}