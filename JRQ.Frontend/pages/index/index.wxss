/* 本页面的样式 */

.container {
  background: #fff;
}

.headWrapper {
  width: 100%;
  background-color: rgb(242, 197, 72);
}

.search {
  /* background-color: rgb(200, 165, 65); */
  width: 90%;
  margin: 0 auto;
  margin-top: 5px;
  margin-bottom: 5px;
}
.banner{
  padding-top: 10px;
  width: 95%;
  margin: 0 auto;
}
.banner_img{
  width: 100%;
  height: 80px;
}
.box-tll {
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  width: 100%;
}

.box {
  width: 95%;
  height: auto;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
  padding-top: 20px;
  margin: 0 auto;
}

.diteall {
  width: 20vw;
  height: 20vh;
  text-align: center;
  align-items: center;
  flex: 1;
   justify-content: center;
}

.conten-image{
  width: 14vw;
  height: 14vw;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  /* background-color: rgb(242, 197, 72); */
  border-radius: 50%;
}
