/* pages/me/publishMyArticle/publishMyArticle.wxss */
@import '/style/common.wxss';
/*本页面css属性*/
/**index.wxss**/
@import '/style/common.wxss';
@import '/template/findBar/searchBar.wxss';
@import '/template/adBar/adBar.wxss';
@import '/template/likeIcon/likeIcon.wxss';

/* 本页面的样式 */

.container {
  background-color: rgb(255, 255, 255);
}

.box {
  width: 95%;
  margin: 0 auto;
}

.conten {
  flex: 1;
  flex-wrap: wrap;
  padding-top: 10px;
}

.title {
  color: rgb(221, 201, 162);
  font-size: 14px;
  font-weight: 800;
}

.text {
  color: rgb(221, 201, 162);
  font-size: 12px;
}

.type_txt {
  text-align: center;
  margin-bottom: 1px;
  border-bottom: 1px solid rgb(221, 201, 162);
}

.type {
  color: rgb(217, 217, 217);
  font-size: 10px;
}

.basic {
  color: rgb(216, 216, 216);
  font-size: 14px;
  margin-top: 5px;
}

.section_box {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.section {
  display: flex;
  flex-wrap: nowrap;
  margin-top: 10px;
  justify-content: space-between;
  align-items: center;
}

.placeholder {
  background-color: rgb(216, 216, 216);
  width: 80px;
  border-radius: 5px;
  margin-left: 5px;
}

.types {
  color: rgb(217, 217, 217);
  font-size: 12px;
  align-items: center;
}

.placeholders {
  background-color: rgb(216, 216, 216);
  width: 120px;
  border-radius: 5px;
  margin-left: 5px;
}

.textarea {
  margin-top: 10px;
}

.textarea-wrp {
  background-color: rgb(216, 216, 216);
  border-radius: 5px;
  margin: 0 auto;
  margin-top: 10px;
}
.img{
  width: 45px;
  height: 45px;
  margin-right: 5px;
}
page {
  background-color: #efefef;
  font-size: 0.7rem;
}

.publisher {
  width: 100%;
}

.publisher-input {
  background-color: white;
  padding: 10px;
}

.publisher-input textarea{
  width: 100%;
  font-size: 0.8rem;
}

.publisher-photos {
  width: 100%;
  margin: 0 0 5px 0;
}
.publisher-photo {
  display: inline-block;
  width: 100px;
  height: 100px;
  margin: 2px;
}
.publisher-photo image {
  width: 100%;
  height: 100%;
}

.publisher-chooser {
  margin: 10px 0;
}

.publisher-chooser-text {
  margin: 0 0 10px 0;
}

.publisher-button {
  margin: 20px 0 0 0;
  width: 100%;
}

.publisher-button button {
  width: 90%;
  height: 40px;
  font-size: 1rem;
}