/* 本页面的样式 */

.container {
  background-color: rgb(255, 255, 255);
}

.box {
  width: 90%;
  margin: 0 auto;
}

.conten {
  flex: 1;
  flex-wrap: wrap;
  padding-top: 10px;
}

.title {
  color: rgb(221, 201, 162);
  font-size: 14px;
  font-weight: 800;
}

.text {
  color: rgb(221, 201, 162);
  font-size: 12px;
}

.type_txt {
  text-align: center;
  margin-top: 5px;
  margin-bottom: 5px;
  border-bottom: 1px solid rgb(221, 201, 162);
}

.type {
  color: rgb(217, 217, 217);
  font-size: 11px;
  text-align: center;
}

.basic {
  color: black;
  font-size: 14px;
  margin-top: 5px;
}

page {
  background-color: #efefef;
  font-size: 0.7rem;
}

.publisher {
  width: 100%;
}

.publisher-input {
  background-color: white;
  padding: 10px;
}

.publisher-input textarea{
  width: 100%;
  font-size: 0.8rem;
}

.publisher-photos {
  width: 100%;
  margin: 0 0 5px 0;
}
.publisher-photo {
  display: inline-block;
  width: 100px;
  height: 100px;
  margin: 2px;
}
.publisher-photo image {
  width: 100%;
  height: 100%;
}

.publisher-chooser {
  margin: 10px 0;
}

.publisher-chooser-text {
  margin: 0 0 10px 0;
}

.publisher-button1 {
  margin: 20px 0 0 0;
  width: 100%;
}

.publisher-button1 button {
  width: 100%;
  height: 40px;
  font-size: 1rem;
}