/**index.wxss**/
@import '/style/common.wxss';
@import '/template/findBar/searchBar.wxss';
@import '/template/adBar/adBar.wxss';
@import '/template/likeIcon/likeIcon.wxss';

/* 本页面的样式 */

.container {
  background-color: rgb(23,23,23);
}

.box {
  width: 95%;
  margin: 0 auto;
}

.conten {
  flex: 1;
  flex-wrap: wrap;
  padding-top: 10px;
}

.title {
  color: rgb(208, 133, 14);
  font-size: 14px;
  font-weight: 800;
}

.text {
  color: rgb(208, 133, 14);
  font-size: 12px;
}

.type_txt {
  text-align: center;
  margin-bottom: 1px;
  border-bottom: 1px solid rgb(221, 201, 162);
}

.type {
  color: rgb(208, 133, 14);
  font-size: 10px;
}

.basic {
  color: rgb(208, 133, 14);
  font-size: 14px;
  margin-top: 5px;
}

.section_box {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.section {
  display: flex;
  flex-wrap: nowrap;
  margin-top: 10px;
  justify-content: space-between;
  align-items: center;
}

.placeholder {
  background-color: #fff;
  width: 80px;
  border-radius: 5px;
  margin-left: 5px;
}

.types {
  color: rgb(208, 133, 14);
  font-size: 12px;
  align-items: center;
}

.placeholders {
  background-color: #fff;
  width: 120px;
  border-radius: 5px;
  margin-left: 5px;
}

.textarea {
  margin-top: 10px;
  width: 100%;
}

.textarea-wrp {
  background-color: #fff;
  border-radius: 5px;
  margin: 0 auto;
  margin-top: 10px;
}
.img{
  width: 45px;
  height: 45px;
  margin-right: 5px;
}
.publisher-chooser {
  margin: 10px 0;
}

.publisher-chooser-text {
  margin: 0 0 10px 0;
}

.publisher-button {
  margin: 20px 0 0 0;
  width: 100%;
}

.publisher-button button {
  width: 100%;
  height: 40px;
  font-size: 1rem;
}