/**index.wxss**/
@import '/style/common.wxss';
@import '/template/findBar/searchBar.wxss';
@import '/template/adBar/adBar.wxss';
@import '/template/likeIcon/likeIcon.wxss';

/* 本页面的样式 */

.container {
  background-color: white;
}

.heder_img {
  width: 95%;
  margin: 0 auto;
}

.img_image {
  width: 100%;
}

.ditu {
  /* border: 1px solid red; */
  width: 95%;
  margin-top: 10px;
}

.ditu_box {
  display: flex;
  justify-content: flex-end;
}

.picker {
  display: inline-block;
}

.ditu image {
  width: 25px;
  height: 30px;
  line-height: 30px;
}

.picker text {
  font-size: 16px;
  color: rgb(242, 198, 94);
}

.box {
  width: 95%;
  /* border-radius: 10px; */
  background: white;
  margin-top: 10px;
  padding-bottom: 10px;
  border: 2px solid rgba(0, 0, 0, 0.1);
  box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.1);
  /* border: 2px solid rgba(0, 0, 0, 0.1);
  box-shadow: rgba(0, 0, 0, 0.1) 0px 0px 15px 10px; */
}

.conten {
  width: 95%;
  margin: 0 auto;
}

.txt {
  height: 30px;
  line-height: 30px;
}

.txt text {
  color: rgb(242, 198, 94);
  font-size: 14px;
}

.user_title {
  width: 75%;
  margin: 0 auto;
}

.user_title text {
  font-size: 18px;
  font-weight: bold;
  color: #000;
}

.user {
  display: flex;
  justify-content: space-between;
  /* border: 1px solid red; */
}

.img_index {
  width: 30px;
  height: 30px;
  border-radius: 6px;
  background: black;
  display: table-cell;
  text-align: center;
  vertical-align: middle;
  align-items: center;
  background-color: black;
  font-size: 24px;
  margin-top: 5px;
}

.img_txt {
  color: rgb(242, 198, 94);
  font-weight: bold;
}

.img image {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.text_box {
  display: flex;
  justify-content: space-around;
  /* border: 1px solid red; */
  float: left;
  margin-left: 6px;
  padding-left: 0;
}

.text_tag {
  background-color: #ccc;
  width: 60px;
  border-radius: 15px;
  text-align: center;
  margin-top: 10px;
  height: 20px;
  line-height: 15px;
  margin-left: 5px;
}

.text_tag text {
  color: #fff;
  font-size: 12px;
}

.footer {
  width: 70%;
  margin: 0 auto;
  font-size: 14px;
}
