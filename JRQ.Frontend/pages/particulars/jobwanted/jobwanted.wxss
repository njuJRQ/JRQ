/* 本页面的样式 */

.container {
  background-color: white;
}

.heder_img {
  width: 95%;
  margin: 0 auto;
}

.img_image {
  width: 100%;
}

.ditu {
  /* border: 1px solid red; */
  width: 95%;
  margin-top: 10px;
}


.ditu_box {
  display: flex;
  justify-content: flex-end;
}
.picker{
  display: inline-block;
}
.ditu image {
  width: 25px;
  height: 30px;
  line-height: 30px;
}

.picker text {
  font-size: 16px;
  color: rgb(242, 198, 94);
}

.box {
  width: 95%;
  /* border-radius: 10px; */
  background: white;
  margin-top: 10px;
  padding-bottom: 10px;
  border: 2px solid rgba(0, 0, 0, 0.1);
  box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.1);
  /* border: 2px solid rgba(0, 0, 0, 0.1);
  box-shadow: rgba(0, 0, 0, 0.1) 0px 0px 15px 10px; */
}

.conten {
  width: 95%;
  margin: 0 auto;
}

.txt {
  height: 30px;
  line-height: 30px;
}

.txt text {
  color: rgb(242, 198, 94);
  font-size: 14px;
}

.money {
  width: 70%;
  margin: 0 auto;
}

.text {
  font-size: 1rem;
  color: #000;
}

.user {
  margin-top: 10px;
  display: flex;
  justify-content: space-between;
  /* border: 1px solid red; */
}

.img {
  width: 40px;
  height: 40px;
  border-radius: 10px;
  display: table-cell;
  text-align: center;
  vertical-align: middle;
  align-items: center;
  /* margin-bottom: 15px; */
}

.img image {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.text_box {
  display: flex;
  justify-content: space-around;
  /* border: 1px solid red; */
  height: 30px;
  line-height: 30px;
}

.text_sree {
  background-color: #ccc;
  width: 80px;
  border-radius: 15px;
  height: 20px;
  line-height: 15px;
  text-align: center;
  margin-top: 10px;
  margin-left: 5px;
}

.text_ask {
  background-color: #ccc;
  width: 80px;
  border-radius: 15px;
  height: 20px;
  line-height: 15px;
  text-align: center;
  margin-top: 10px;
  margin-left: 5px;
}

.text_degree {
  background-color: #ccc;
  width: 60px;
  border-radius: 15px;
  text-align: center;
  margin-top: 10px;
  height: 20px;
  line-height: 15px;
  margin-left: 5px;
}

.text_degree text {
  color: #fff;
  font-size: 12px;
}

.text_ask text {
  color: #fff;
  font-size: 12px;
}

.text_sree text {
  color: #fff;
  font-size: 12px;
}

.footer {
  width: 70%;
  margin: 0 auto;
  font-size: 14px;
  margin-top: 10px;
}
