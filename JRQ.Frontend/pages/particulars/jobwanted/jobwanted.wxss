/* 本页面的样式 */
.container {
  background-color: white;
}
.box{
  width: 90%;
  /* border-radius: 10px; */
  background: white;
  margin-top: 10px;
  padding-bottom: 10px;
  box-shadow: 0px 15px 30px rgba(0,0,0,0.1);
}
.conten{
  width: 90%;
  margin: 0 auto;
}
.title{
  display: flex;
  justify-content: space-between;
}
.txt{
  color: black;
  font-size: 14px;
}
.money{
  border-bottom: 1px solid black;
  padding-bottom: 10px;
  width: 68%;
}
.text{
  font-size: 12px;
}
.ask{
  width: 65%;
}
.ask_type{
  font-size: 10px;
  color: #fff;
  background-color: black;
  margin-right: 8px;
}
.user{
  margin-top: 10px;
  display: flex;
  justify-content: space-between;
  /* width: 35%; */
}
.img{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display:table-cell;
  text-align:center; 
  vertical-align:middle;
  align-items: center;
 margin-bottom: 15px;
}
.img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  
}
.title_txt{
  margin-left: 10px;
  text-align: center;
}
.title_user{
  color: black;
  font-size: 1rem;
  
}
.userinfo{
  font-size: 10px;
  text-align:center; 
  margin-top: 5px;
}