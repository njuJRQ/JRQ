/* pages/particulars/resume/resume.wxss */
@import '/style/common.wxss';
@import '/template/findBar/searchBar.wxss';
@import '/template/adBar/adBar.wxss';
@import '/template/likeIcon/likeIcon.wxss';

/* 本页面的样式 */

page{
  min-height: 100%;
  background: rgb(223, 197, 122);
}
.container {
  background: rgb(223, 197, 122);
}

.box {
  width: 95%;
  margin: 0 auto;
}

.conten {
  width: 95%;
  margin: 0 auto;
  /* border: 1px solid red; */
}

.top {
  display: flex;
  justify-content: space-between;
  height: 100px;
  margin-top: 20px;
  border-bottom: 1px solid #fff;
  padding-bottom: 15px;
}

.typeface {
  line-height: 40px;
}

.title {
  font-size: 18px;
  color: #fff;
  display: block;
}

.title_studu {
  font-size: 10px;
  color: rgb(158, 158, 158);
  display: block;
}

.img {
  width: 60px;
  height: 60px;
  line-height: 60px;
  border-radius: 50%;
}

.img_image {
  width: 100%;
  height: 100%;
  border-radius: 50%;

}

.middle {
  width: 220px;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 20px;
  padding-bottom: 10px;
}

.icon {
  width: 55px;
  height: 18px;
  line-height: 18px;
  display: flex;
  justify-content: space-between;
}

.icon_img {
  width: 18px;
  height: 18px;
}

.experience {
  width: 250px;
  margin-top: 15px;
}

.expect {
  width: 100%;
}

.expect_b {
  display: flex;
  justify-content: space-between;
  line-height: 30px;
}

.title_txt {
  color: #fff;
  font-size: 12px;
}
.footer{
  margin-top: 15px;
padding-bottom: 50px;
}
