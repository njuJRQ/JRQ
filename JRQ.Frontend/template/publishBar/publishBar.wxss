/* template/publisherBar/publisherBar.wxss */
.publishBarWrapper {
  width: 100%;
  background-color: #f7f1e5;
  padding: 10px;
}

.publishBar {
  box-sizing: border-box;
  padding: 5px 10px 5px 10px;
  background: #f7f1e5;
  display: flex;
  align-items: center;
  border: 1px rgba(0, 0, 0, 0.103) solid;
  background: white;
  justify-content: space-between;
  border-radius: 5px;
  box-shadow: 0 5px 20px #c0c0c0;
  line-height: 1.5rem;
}

.publishBar__text {
  padding: 3px 0 3px 0;
  font-size: 0.8rem;
}

.publishBar__camera {
  width: 20px;
  height: 20px;
}
